    }

    .progress-circle-prog1 {
        fill: none;
        stroke: green;
        stroke-width: 10px;
        stroke-dasharray: 0 999;
        stroke-dashoffset: 0px;
        transition: stroke-dasharray 0.7s linear 0s;
    }

    .progress-text1 {
