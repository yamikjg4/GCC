        top: 60px;
        text-align: center;
        font-size: 2em;
    }
</style>
<style>
    input, button, a {
    }
</style>
<div class="custom-model-main">
    <div class="custom-model-inner">
        <div class="close-btn" style="color:black;font-weight:bolder;">×</div>
        <div class="custom-model-wrap">
            <div class="pop-up-content-wrap">
                <div id="partialViewContainer"></div>
            </div>
        </div>
    </div>

</div>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<div><h3 style="text-align:center;" id="title">Update Matrix </h3></div>
<div class="table-responsive">
<table class="table" id="example">
    <thead>
        <tr class="text-center">
            <th style="width:4%;">
             Task Id
            </th>
            <th>
              Task Name
            </th>
            <th>
                Task Description
            </th>
            <th>
              Due Date For Submission
            </th>
            <th>
                Due Date For Approval
            </th>
            <th>
                Primary Owner
            </th>
            <th>
                Secondary Owner
            </th>
            <th>
                Primary Approver
            </th>
            <th>
                Secondary Approver
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TaskId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TaskName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TaskDescription)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Duedateforsubmission)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Duedateforapproval)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrimaryOwnerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecondaryOwnerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrimaryApproverName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecondaryApproverName)
            </td>
            <td>
                        <button type="button" style="background-color:#008080;" onclick="openpopup(@item.TaskId)"><i class="fa fa-edit" style="font-size:24px;color:white"></i></button>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
<!-- DataTables CSS -->
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">

<!-- DataTables JavaScript -->
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script>
    $(document).ready(function () {
        $('#example').DataTable({
            autoFill: true,
            paging: true,
            search: true,
            //pageLength: 5
        });
    });
    $(".close-btn, .bg-overlay").click(function () {
        $(".custom-model-main").removeClass('model-open');
    });
    var openPartialViewUrl = '@Url.Action("OpenPartialview", "Admin")';

    function openpopup(Id) {
        console.log(Id);
        $.ajax({
            url: openPartialViewUrl,
            type: 'POST',
            data: { TaskId:Id /* Pass the TaskId here */ },
            success: function (data) {
                $('#partialViewContainer').html(data);
                $(".custom-model-main").addClass('model-open');
            },
            error: function () {
                alert('Error occurred while loading the partial view.');
            }
        });
       
    }
</script>